<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cater"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="200dp"

        android:fontFamily="@font/aclonica"
        android:text="Event Details -"
        android:textColor="#2F125E"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="75dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:defaultFocusHighlightEnabled="true"
        android:ems="10"

        android:hint="(Event Type)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="178dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:ems="10"
        android:hint="Begin on(mm/dd/yyyy)"
        android:textColorHint="#ffffff"
        android:inputType="date" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="257dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:ems="10"
        android:textColorHint="#ffffff"
        android:hint="End on(mm/dd/yyyy)"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="350dp"
        android:textColorHint="#ffffff"

        android:fontFamily="@font/aclonica"
        android:text="Personal Details -"
        android:textColor="#2F125E"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:textColorHint="#ffffff"
        android:layout_marginTop="400dp"
        android:background="#000000"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Contact Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="478dp"
        android:background="#000000"
        android:ems="10"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="578dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"

        android:text="Submit"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/noOfTimesADay"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="556dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:inputType="number"
        android:textColorHint="#ffffff"
        android:hint="Serving Freq." />

</RelativeLayout>